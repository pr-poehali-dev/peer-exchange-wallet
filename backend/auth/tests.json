{
  "tests": [
    {
      "name": "me без токена — 401",
      "method": "POST",
      "path": "/",
      "body": {"action": "me"},
      "expectedStatus": 401,
      "bodyMatcher": "partial",
      "expectedBody": "Не авторизован"
    },
    {
      "name": "register — новый пользователь",
      "method": "POST",
      "path": "/",
      "body": {"action": "register", "name": "Тест Юзер", "username": "testuser_abc99", "email": "test_abc99@example.com", "password": "password123"},
      "expectedStatus": 200,
      "bodyMatcher": "partial",
      "expectedBody": {"token": "string"}
    },
    {
      "name": "login — неверный пароль",
      "method": "POST",
      "path": "/",
      "body": {"action": "login", "email": "notexist@example.com", "password": "wrongpass"},
      "expectedStatus": 401,
      "bodyMatcher": "partial",
      "expectedBody": {"error": "string"}
    }
  ]
}